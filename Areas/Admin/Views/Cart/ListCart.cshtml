@model IEnumerable<BookStore.Models.Cart>
@{
    ViewData["Title"] = "ListCart";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ListCart</h1>
<div class="container">
    <h2>Striped Rows</h2>
    <p>The .table-striped class adds zebra-stripes to a table:</p>
    <a href="~/Admin/Cart/Create">Create</a>
    <form class="form-inline" action="~/Admin/Cart/ListCart?search=@ViewBag.Search" method="post">
        <div class="form-group">
            <label for="pwd">Search:</label>
            <input type="text" class="form-control" name="search" placeholder="Search By Name">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>BookName</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>TotalPrice</th>
                <th>UserId</th>
                <th>BookId</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookName</td>
                    <td><img src="@Url.Content("~/img/" + item.Image)" alt="" width="100" height="80" /></td>
                    <td>@item.Quantity</td>
                    <td>@item.UserId</td>
                    <td>@item.BookId</td>             
                    <td>
                        <a href="~/Admin/Cart/Edit?Id=@item.CartId">Edit</a> |
                        <a href="~/Admin/Cart/Detail?Id=@item.CartId">Detail</a> |
                        <a href="~/Admin/Cart/Delete?Id=@item.CartId">Delete</a> |
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <a href="~/Admin/Cart/ListCart?search=@ViewBag.Search&sortBy=BookName&sortType=@(ViewBag.SortType == "ASC" ? "DESC" : "ASC")">Sort</a>
</div>

