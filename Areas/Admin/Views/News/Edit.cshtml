@model BookStore.Models.News
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>
<p style="color:red">@ViewBag.Err</p>
<form class="form-horizontal" method="post" action="~/Admin/News/Edit" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.NewsId" />
    <div class="form-group">
        <label class="control-label col-sm-2" for="NewsTitle">NewsTitle:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="NewsTitle" placeholder="Enter NewsTitle">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="NewsContent">NewsContent:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="NewsContent" placeholder="Enter NewsContent">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="NewsImageUrl">NewsImageUrl:</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" name="file">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>

